{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "declaration": false,
        "declarationMap": false,
        "module": "ES2020",
        "moduleResolution": "node",
        "rootDir": ".",
        "outDir": "out",
        "types": [
            "node",
            "vscode",
            "vitest/globals"
        ]
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "coverage/**/*",
        "out/**/*"
    ]
}