{
  "name": "kiro-steering-loader",
  "displayName": "Kiro Steering Loader",
  "description": "Load steering agent templates into Kiro projects",
  "version": "0.1.0",
  "publisher": "jamesbconner",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesbconner/KiroSteeringLoader.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "kiro-steering": [
        {
          "id": "kiroSteeringLoader",
          "name": "Steering Templates",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kiro-steering",
          "title": "Kiro Steering",
          "icon": "$(book)"
        }
      ]
    },
    "commands": [
      {
        "command": "kiroSteeringLoader.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "kiroSteeringLoader.forceRefresh",
        "title": "Force Refresh (Clear Cache)",
        "icon": "$(refresh)"
      },
      {
        "command": "kiroSteeringLoader.loadTemplate",
        "title": "Load Template"
      },
      {
        "command": "kiroSteeringLoader.setTemplatesPath",
        "title": "Kiro Steering Loader: Set Templates Path",
        "category": "Kiro Steering Loader",
        "icon": "$(folder-opened)"
      },
      {
        "command": "kiroSteeringLoader.configureGitHubRepository",
        "title": "Kiro Steering Loader: Configure GitHub Repository",
        "category": "Kiro Steering Loader",
        "icon": "$(github)"
      },
      {
        "command": "kiroSteeringLoader.configureGitHubToken",
        "title": "Kiro Steering Loader: Configure GitHub Token",
        "category": "Kiro Steering Loader",
        "icon": "$(key)"
      },
      {
        "command": "kiroSteeringLoader.clearGitHubToken",
        "title": "Kiro Steering Loader: Clear GitHub Token",
        "category": "Kiro Steering Loader",
        "icon": "$(trash)"
      },
      {
        "command": "kiroSteeringLoader.clearCache",
        "title": "Kiro Steering Loader: Clear Cache",
        "category": "Kiro Steering Loader",
        "icon": "$(clear-all)"
      },
      {
        "command": "kiroSteeringLoader.switchToLocalMode",
        "title": "Kiro Steering Loader: Switch to Local Mode",
        "category": "Kiro Steering Loader",
        "icon": "$(folder)"
      },
      {
        "command": "kiroSteeringLoader.switchToGitHubMode",
        "title": "Kiro Steering Loader: Switch to GitHub Mode",
        "category": "Kiro Steering Loader",
        "icon": "$(github)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kiroSteeringLoader.refresh",
          "when": "view == kiroSteeringLoader",
          "group": "navigation"
        },
        {
          "command": "kiroSteeringLoader.setTemplatesPath",
          "when": "view == kiroSteeringLoader",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "kiroSteeringLoader.setTemplatesPath",
          "when": "view == kiroSteeringLoader",
          "group": "inline"
        }
      ]
    },
    "configuration": {
      "title": "Kiro Steering Loader",
      "properties": {
        "kiroSteeringLoader.templatesPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "**[Legacy Local Mode]** Path to the directory containing steering agent templates on your local file system. This setting is maintained for backward compatibility. For new setups, use `kiroSteeringLoader.repository` to load templates from GitHub.",
          "scope": "window",
          "order": 2
        },
        "kiroSteeringLoader.repository": {
          "type": "object",
          "default": null,
          "markdownDescription": "**[GitHub Mode]** Configure a GitHub repository to load steering templates from. This is the recommended approach for sharing and managing templates across teams.\n\n**Example:**\n```json\n{\n  \"owner\": \"your-username\",\n  \"repo\": \"steering-templates\",\n  \"path\": \"templates\",\n  \"branch\": \"main\"\n}\n```\n\nUse the command `Kiro Steering Loader: Configure GitHub Repository` to set this up interactively.",
          "scope": "window",
          "order": 1,
          "properties": {
            "owner": {
              "type": "string",
              "description": "GitHub repository owner (username or organization name)",
              "examples": [
                "octocat",
                "microsoft",
                "your-org"
              ]
            },
            "repo": {
              "type": "string",
              "description": "GitHub repository name",
              "examples": [
                "steering-templates",
                "kiro-templates",
                "agent-prompts"
              ]
            },
            "path": {
              "type": "string",
              "default": "",
              "description": "Optional subdirectory path within the repository where templates are located. Leave empty to use the repository root.",
              "examples": [
                "templates",
                "steering",
                "prompts/steering"
              ]
            },
            "branch": {
              "type": "string",
              "default": "main",
              "description": "Git branch to fetch templates from",
              "examples": [
                "main",
                "master",
                "develop",
                "production"
              ]
            }
          },
          "required": [
            "owner",
            "repo"
          ]
        },
        "kiroSteeringLoader.cache.ttl": {
          "type": "number",
          "default": 300,
          "minimum": 60,
          "maximum": 3600,
          "markdownDescription": "Cache time-to-live in seconds for GitHub API responses. Templates are cached to reduce API calls and improve performance. Default is 5 minutes (300 seconds).",
          "scope": "window",
          "order": 3
        },
        "kiroSteeringLoader.cache.maxEntries": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "markdownDescription": "Maximum number of cache entries to store. Older entries are evicted when this limit is reached using an LRU (Least Recently Used) strategy.",
          "scope": "window",
          "order": 4
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.build.json",
    "compile:tests": "tsc -p ./tsconfig.tests.json",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:unit:watch": "vitest --config vitest.unit.config.ts",
    "test:unit:runner": "npx tsx tests/unit/runUnitTests.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:integration:runner": "npx tsx tests/integration/runIntegrationTests.ts",
    "test:performance": "vitest run --config vitest.performance.config.ts",
    "test:performance:watch": "vitest --config vitest.performance.config.ts",
    "test:performance:runner": "node --expose-gc --import tsx/esm tests/performance/runPerformanceTests.ts",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test:e2e:runner": "npx tsx tests/e2e/runE2ETests.ts",
    "test:memory": "node --expose-gc node_modules/vitest/vitest.mjs run --config vitest.performance.config.ts tests/performance/memoryUsage.test.ts",
    "test:memory:watch": "node --expose-gc node_modules/vitest/vitest.mjs --config vitest.performance.config.ts tests/performance/memoryUsage.test.ts",
    "test:report": "npx tsx scripts/test-failure-reporter.js",
    "test:notify": "npx tsx scripts/notify-test-failures.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:memory",
    "test:all:report": "npm run test:all; npm run test:report",
    "coverage:check": "npx tsx scripts/coverage-reporter.ts check",
    "coverage:report": "npx tsx scripts/coverage-reporter.ts report",
    "coverage:trends": "npx tsx scripts/coverage-trend-analyzer.ts analyze",
    "coverage:dashboard": "npx tsx scripts/coverage-dashboard.ts",
    "coverage:post-test": "npx tsx scripts/post-test-coverage.ts",
    "coverage:quality-gate": "npm run test:coverage && npm run coverage:post-test && npm run coverage:check",
    "coverage:badge": "node -e \"const config = require('./coverage.config.js'); console.log('Coverage configuration loaded successfully');\"",
    "coverage:validate": "npx tsx scripts/validate-coverage-setup.ts",
    "ci:check": "npx tsx scripts/ci-check.js",
    "ci:check:help": "npx tsx scripts/ci-check.js --help",
    "test:health-check": "npx tsx tests/maintenance/run-health-check.ts",
    "test:cleanup": "npx tsx tests/maintenance/test-cleanup.ts",
    "test:performance-report": "npx tsx tests/maintenance/performance-monitor.ts",
    "test:dependency-check": "npx tsx tests/maintenance/dependency-monitor.ts",
    "test:flaky-check": "npx tsx tests/maintenance/flaky-test-detector.ts",
    "test:maintenance": "npm run test:cleanup && npm run test:health-check && npm run test:performance-report",
    "test:maintenance:full": "npm run test:maintenance && npm run test:dependency-check && npm run test:flaky-check"
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "@types/vscode": "^1.74.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vscode/test-electron": "^2.3.8",
    "fast-check": "^4.3.0",
    "tsx": "^4.20.5",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}
