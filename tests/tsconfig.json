{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out/tests",
    "rootDir": ".",
    "types": ["node", "vscode", "vitest/globals"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["../src/*"],
      "@tests/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "../src/**/*.ts"
  ],
  "exclude": [
    "../node_modules",
    "../out",
    "../.vscode-test"
  ]
}