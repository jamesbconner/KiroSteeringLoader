{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "outDir": "out",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    ".vscode-test",
    "tests/**/*",
    "coverage/**/*",
    "out/**/*",
    "*.config.ts",
    "scripts/**/*"
  ]
}