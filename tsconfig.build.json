{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "module": "ES2020",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "tests/**/*",
    "coverage/**/*",
    "out/**/*",
    "*.config.ts",
    "scripts/**/*"
  ]
}